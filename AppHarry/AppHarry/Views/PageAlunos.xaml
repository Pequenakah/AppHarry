<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHarry.Views.PageAlunos"
             xmlns:controls="clr-namespace:AppHarry.Controls"
             xmlns:views="clr-namespace:AppHarry.Views"
             xmlns:data="clr-namespace:AppHarry.Data"
             Title="Alunos"
             BackgroundColor="#FFEEDD"
             >
    
            <CollectionView Margin="5"
                         BackgroundColor="Black"
                            
                            ItemsSource="{x:Static data:DadosAlunos.Alunos}"
                            ItemTemplate="{StaticResource HarryTemplate}"
                            SelectionMode="Single"
                            SelectionChanged="AbrirDetalhesAlunos"/>

</ContentPage>